<Page x:Class="PracticalWork4_Smolin_Koskina.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork4_Smolin_Koskina"
      mc:Ignorable="d" 
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="3" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/function3.png" Height="100" Width="270" Margin="10"/>
                    <TextBlock Margin="5,-10,5,5" FontSize="16" HorizontalAlignment="Center">
                        <Run Text="x"/>
                        <Run Text="0" FontSize="8" BaselineAlignment="Subscript"/>
                        <Run Text="=-100; x"/>
                        <Run Text="k" FontSize="8"  BaselineAlignment="Subscript"/>
                        <Run Text="=100; dx=10;"/>
                    </TextBlock>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="x" Width="35" TextAlignment="Center"/>
                        <TextBox x:Name="XTextBox" MinWidth="120" PreviewTextInput="XTextBox_PreviewTextInput" PreviewKeyDown="XTextBox_PreviewKeyDown"/>
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="b" Width="35" TextAlignment="Center"/>
                        <TextBox x:Name="BTextBox" MinWidth="120" PreviewTextInput="BTextBox_PreviewTextInput" PreviewKeyDown="BTextBox_PreviewKeyDown"/>
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="Ответ" Width="35" TextAlignment="Center"/>
                        <TextBox x:Name="AnswerTextBox" MinWidth="120" IsEnabled="False"/>
                    </StackPanel>
                    <Button Margin="5" 
                            x:Name="Calculate" Content="Вычислить" Height="25"
                            VerticalAlignment="Top" Click="Calculate_Click"/>
                    <Button Margin="5" 
                            x:Name="Clear" Content="Очистить" Height="25"
                            VerticalAlignment="Bottom" Click="Clear_Click"/>
                </StackPanel>
                <Grid>
                    <WindowsFormsHost Width="400" >
                        <charts:Chart x:Name="ChartPayments">
                            <charts:Chart.Legends>
                                <charts:Legend>
                                </charts:Legend>
                            </charts:Chart.Legends>
                        </charts:Chart>
                    </WindowsFormsHost>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
