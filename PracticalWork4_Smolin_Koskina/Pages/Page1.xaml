<Page x:Class="PracticalWork4_Smolin_Koskina.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork4_Smolin_Koskina"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="3" Margin="5">
                <Image Source="/Images/function1.png" Height="100" Margin="10"/>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="x" Width="35" TextAlignment="Center"/>
                        <TextBox x:Name="XTextBox" MinWidth="120" PreviewTextInput="XTextBox_PreviewTextInput" PreviewKeyDown="XTextBox_PreviewKeyDown"/>
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="y" Width="35" TextAlignment="Center"/>
                        <TextBox x:Name="YTextBox" MinWidth="120" PreviewTextInput="YTextBox_PreviewTextInput" PreviewKeyDown="YTextBox_PreviewKeyDown"/>
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="z" Width="35" TextAlignment="Center"/>
                        <TextBox x:Name="ZTextBox" MinWidth="120" PreviewTextInput="ZTextBox_PreviewTextInput" PreviewKeyDown="ZTextBox_PreviewKeyDown"/>
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock Text="Ответ" Width="35" TextAlignment="Center"/>
                        <TextBox x:Name="AnswerTextBox" MinWidth="120" IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
                <Grid>
                    <Button Margin="5" 
                    x:Name="Calculate" Content="Вычислить" Height="40"
                    VerticalAlignment="Top" Click="Calculate_Click"/>
                    <Button Margin="5" 
                    x:Name="Clear" Content="Очистить" Height="40"
                    VerticalAlignment="Bottom" Click="Clear_Click"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
